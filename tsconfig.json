{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6", 
        "esModuleInterop": true,
        "removeComments": true,
        "outDir": "build",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "strict": true,
        "noUnusedLocals": true,
        "strictFunctionTypes": true
    },
    "exclude": [
        "test/**/*"
    ]
}