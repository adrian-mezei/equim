{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6", 
        "outDir": "build",
        "rootDir": "./src/",
        "esModuleInterop": true,
        "removeComments": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "strict": true,
        "noUnusedLocals": true,
        "strictFunctionTypes": true
    },
    "exclude": [
        "node_modules",
        "build",
        "src/test"
    ]
}